<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
  <% if @user %>
  <nav class="navbar navbar-light bg-faded">
    <button class="navbar-toggler hidden-sm-up" type="button" data-toggle="collapse" data-target="#exCollapsingNavbar2">
      &#9776;
    </button>
    <div class="collapse navbar-toggleable-xs" id="exCollapsingNavbar2">
      <%= link_to 'Home', user_articles_path(@user), class:"navbar-brand" %>
      <ul class="nav navbar-nav">
        <li class="nav-item active">
          <%= link_to 'All', user_get_all_path, class:"nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to 'New Article', new_user_article_path(@user), class:"nav-link" %>

        </li>
        <li class="nav-item">
          <%= link_to 'Log out', logout_path, class:"nav-link" %>
        </li>
      </ul>
    </div>
  </nav>
      <% end %>
  <%= yield %>
</div>
</body>
</html>
