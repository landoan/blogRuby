<div class="central">
  <h1>Welcome to Ruby blog app</h1>
  <div class="col-md-6">
    <h4>Have your blog?</h4>
    <%= form_for(:user, url: login_path, method: :post) do |f| %>
        <fieldset class="form-group">
          <label for="usernameLogin">Username: </label>
          <%= f.text_field :username, id: "usernameLogin", class: "form-control", placeholder: "Username" %>
        </fieldset>
        <fieldset class="form-group">
          <label for="passwordLogin">Password: </label>
          <%= f.password_field :password, id: "passwordLogin", class: "form-control", placeholder: "Password" %>
        </fieldset>
        <button type="submit" class="btn btn-primary">Go Blog</button>
    <% end %>
  </div>


  <div class="col-md-6">
    <h4>New to our Ruby blog?</h4>
    <%= form_for(:user, :url => {:controller => 'users', :action => 'create'}) do |f| %>
        <fieldset class="form-group">
          <label for="usernameSignup">Username: </label>
          <%= f.text_field :username, id: "usernameSignup", class: "form-control", placeholder: "Username" %>
        </fieldset>

        <fieldset class="form-group">
          <label for="emailSignup">Email: </label>
          <%= f.text_field :email, id: "emailSignup", class: "form-control", placeholder: "Email" %>
        </fieldset>

        <fieldset class="form-group">
          <label for="avatarSignup">Avatar URL: </label>
          <%= f.text_field :avatar_link, id: "avatarSignup", class: "form-control", placeholder: "Avatar URL" %>
        </fieldset>

        <fieldset class="form-group">
          <label for="passwordSignup">Password: </label>
          <%= f.password_field :password, id: "passwordSignup", class: "form-control", placeholder: "Password" %>
        </fieldset>
        <button type="submit" class="btn btn-success">Create</button>
    <% end %>
  </div>
</div>

